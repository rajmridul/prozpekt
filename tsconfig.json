{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./js",
    "rootDir": "./src",
    "sourceMap": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 